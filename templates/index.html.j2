<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Matrix Decomposition — Notebooks and interactive apps</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    @font-face {
      font-family: 'Test Sohne';
      src: url('/fonts/TestSohne-Regular.woff2') format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Test Sohne';
      src: url('/fonts/TestSohne-Medium.woff2') format('woff2');
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Test Sohne';
      src: url('/fonts/TestSohne-Bold.woff2') format('woff2');
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
    :root{
  --color-primary:#2563eb; /* blue */
  --color-accent:#f59e0b;  /* amber */
  --color-text:#111827;    /* gray-900 */
  --color-bg:#ffffff;      /* white */
  --color-border:#e5e7eb;  /* gray-200 */
  --radius:12px;
  --container:1100px;
    }
    *{box-sizing:border-box}
    html,body{margin:0;padding:0}
    body{font-family: "Inter", "Montserrat", "Test Sohne", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; color:var(--color-text); background:var(--color-bg); font-size:14.4px; line-height:1.55; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale;}
  a{color:inherit;text-decoration:none}
    .container{max-width:var(--container); margin-inline:auto; padding:24px}
    header{border-bottom:1px solid var(--color-border); position:sticky; top:0; background:rgba(255,255,255,0.85); z-index:100; -webkit-backdrop-filter:saturate(180%) blur(10px); backdrop-filter:saturate(180%) blur(10px); box-shadow:0 1px 0 rgba(17,24,39,0.04), 0 8px 20px rgba(17,24,39,0.06);}
    .brand{display:flex; align-items:center; gap:10px; font-weight:800; letter-spacing:-0.01em}
    .brand-badge{background:var(--color-primary); color:#fff; border-radius:10px; padding:6px 10px; font-size:12px}
    .sr-only {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      z-index: 9999;
      background: #fff;
      color: #111827;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
      font-size: 20px;
      font-weight: 700;
      letter-spacing: -0.01em;
      padding: 12px 32px;
      margin: 0;
      border: none;
      border-radius: 0;
      box-shadow: none;
      overflow: visible;
      clip: auto;
      white-space: normal;
      display: flex;
      align-items: center;
      justify-content: flex-start;
    }
    nav a{padding:8px 10px; border-radius:8px}
    nav a:hover{background:var(--color-border)}
  .hero{width:100vw; margin-left:calc(-1 * ((100vw - var(--container)) / 2)); padding:32px 24px 12px; background: rgba(37, 99, 235, 0.06); border-radius:16px;}
    @media (min-width:768px){ .hero{ padding:48px 48px 16px; } }
  .hero h1{font-size:28px; line-height:1.2; margin:0 0 10px; letter-spacing:-0.02em}
    @media (min-width:768px){ .hero h1{font-size:40px} }
  .hero p{margin:0; opacity:.85}
    .stats{display:flex; gap:16px; margin-top:16px; flex-wrap:wrap}
    .stat{display:flex; align-items:center; gap:8px; border:1px solid var(--color-border); padding:8px 12px; border-radius:999px; font-size:14px}
    .accent{color:var(--color-primary); font-weight:600}
    .toolbar{display:flex; gap:12px; flex-wrap:wrap; margin:24px 0}
    .search{flex:1 1 260px; display:flex; align-items:center; gap:0; border:1.5px solid var(--color-border); border-radius:12px; background:#fff; box-shadow:0 2px 8px rgba(37,99,235,0.04); padding:0; transition:box-shadow .2s, border-color .2s; position:relative;}
    .search:focus-within{border-color:var(--color-primary); box-shadow:0 4px 16px rgba(37,99,235,0.10);}
    .search__icon{position:absolute; left:14px; top:50%; transform:translateY(-50%); color:#888; pointer-events:none;}
    .search input{border:0; outline:0; width:100%; font-size:15px; padding:12px 14px 12px 38px; background:transparent; border-radius:12px;}
    .filters{display:flex; gap:8px}
    .chip{border:1px solid var(--color-border); border-radius:999px; padding:8px 12px; background:#fff; font-size:14px; transition: border-color .2s ease, color .2s ease, background .2s ease}
    .chip:hover{border-color:#d1d5db}
    .chip[data-active="true"]{border-color:var(--color-primary); color:var(--color-primary); font-weight:600}
    .section{padding:10px 0 24px}
  .section h2{font-size:18px; margin:0 0 12px}
    .grid{display:grid; grid-template-columns:1fr; gap:16px}
  @media (min-width:640px){ .grid{grid-template-columns:repeat(2,1fr); gap:36px;} }
  @media (min-width:1024px){ .grid{grid-template-columns:repeat(2,1fr); gap:48px;} }
  .card{border:2px solid #111; border-radius:var(--radius); padding:8px; display:flex; flex-direction:column; gap:8px; background:#fff; transition: box-shadow .2s ease, border-color .2s ease; box-shadow: 0 1px 0 rgba(17,24,39,0.04);}
  .card:hover{border-color:var(--color-primary); box-shadow: 0 4px 24px rgba(37,99,235,0.10), 0 8px 20px rgba(17,24,39,0.06);}
    .card h3,
    .card h3 a{
      font-weight:700;
      font-size:16px;
      margin:0;
      letter-spacing:-0.01em;
      color:#111;
    }
    .card h3 a:focus-visible{outline: none; box-shadow: 0 0 0 2px rgba(37,99,235,0.35); border-radius:6px;}
  .card p{font-size:15px; margin:0; opacity:.92}
  .card__media img{width:100%;height:220px;object-fit:cover;display:block; border:2px solid var(--color-border); border-radius:10px;}
    .tags{display:flex; gap:6px; flex-wrap:wrap}
    .tag{font-size:12px; padding:4px 8px; border-radius:999px; background: #fff; border:2px solid #111; margin-right:2px;}
    .card-meta{display:flex; justify-content:space-between; align-items:center; font-size:12px; opacity:.8}
    .badge{padding:4px 8px; border-radius:999px; border:1px solid var(--color-border)}
    .badge--accent{border-color:var(--color-accent); color:var(--color-accent)}
    .empty{border:1px dashed var(--color-border); border-radius:var(--radius); padding:20px; text-align:center; opacity:.8}
    footer{border-top:1px solid var(--color-border); padding:24px 0; margin-top:32px; font-size:14px}
  .container{max-width:var(--container); margin-inline:auto; padding:24px; margin-top:56px}
    /* add shared button styles and actions row */
    .btn{display:inline-flex;align-items:center;gap:8px;border-radius:10px;font-size:14px;padding:8px 12px;font-weight:600;line-height:1}
    .btn--primary{background:var(--color-primary);color:#fff}
    .btn--primary:hover{opacity:.95}
    .btn--ghost{border:1px solid var(--color-border);background:#fff;color:var(--color-text)}
    .btn--ghost:hover{opacity:.9}
    .btn:focus-visible{outline:none; box-shadow: 0 0 0 2px rgba(37,99,235,0.35);}
    .actions{display:flex;gap:8px;flex-wrap:wrap;margin-top:6px}
    .icon{display:inline-block;vertical-align:middle}
    /* GitHub header button style */
    .gh-btn{display:inline-flex;align-items:center;gap:8px;border:1px solid var(--color-border);border-radius:10px;padding:8px 12px;font-weight:600}
    .gh-btn:hover{opacity:.9}
    /* Card image preview styles */
    .card__media{border:1px solid var(--color-border);border-radius:10px;overflow:hidden;aspect-ratio:16/9;background:#fff}
  .card__media img{width:100%;height:100%;aspect-ratio:16/9;object-fit:cover;display:block; border:2px solid #111; border-radius:10px;}
  .tag{font-size:12px; padding:4px 8px; border-radius:999px; background: #fff; border:2px solid #111; margin-right:2px;}

    /* latest update banner styles */
    .update{border:1px solid var(--color-border);border-radius:var(--radius);background:#fff;padding:12px 14px;display:flex;align-items:center;gap:12px;margin:8px 0 24px}
    .update__badge{background:var(--color-accent);color:#fff;border-radius:999px;font-size:12px;font-weight:700;padding:4px 8px}
    .update__content p{margin:0}
    .update__title{font-size:14px}
    .update__meta{font-size:12px;opacity:.8;margin-top:2px}

    /* header actions buttons (shared style for Docs/GitHub) */
    .header-actions{display:flex;gap:10px;align-items:center}
    .action-btn{display:inline-flex;align-items:center;gap:8px;border:1px solid var(--color-border);border-radius:10px;padding:8px 12px;font-weight:600;background:#fff;color:var(--color-text)}
    .action-btn:hover{opacity:.9}
    .action-btn .icon{display:inline-block;vertical-align:middle}
    .action-btn:focus-visible{outline:none; box-shadow: 0 0 0 2px rgba(37,99,235,0.35);}

    /* Hero section background SVG */
    .hero-bg {
      position: absolute;
      left: 50%;
      top: 0;
      transform: translateX(-50%);
      width: 520px;
      height: 180px;
      z-index: 0;
      pointer-events: none;
      opacity: 0.18;
    }
  </style>
</head>
<body>
  <main id="content" class="container" role="main">
    <section class="hero" aria-labelledby="hero-title" style="position:relative; overflow:hidden; background:#111; color:#fff; width:100vw; margin-left:calc(-1 * ((100vw - var(--container)) / 2)); border-radius:0;">
      <h1 id="hero-title" style="color:#fff;">Matrix Decomposition</h1>
      <p style="color:#fff;">A curated set of notebooks and small apps exploring matrix factorizations.</p>
    </section>
    <section class="update" aria-labelledby="latest-update-title" style="margin-top:16px; margin-bottom:0; border:none; border-radius:0; background:none; padding:0; display:block; max-width:var(--container); margin-left:auto; margin-right:auto;">
      <h2 id="latest-update-title" class="sr-only">Latest update</h2>
      <div class="update__content" style="display:flex; align-items:center; gap:10px;">
          <span class="update__badge" aria-hidden="true">Latest</span>
          <p class="update__title" style="margin:0;"><strong>v0.2 — Added image previews to notebook cards</strong></p>
        </div>
      <div class="update__meta" style="margin-top:4px; font-size:12px; opacity:.8;">
        <time datetime="2025-08-30">Aug 30, 2025</time>
        · <a href="#changelog" style="color:#2563eb;">View changelog</a>
      </div>
    </section>

    <section class="toolbar" aria-label="Browse controls">
    </section>

    <section class="sr-only" aria-label="Site identity and actions" style="box-shadow:0 2px 8px rgba(0,0,0,0.10);">
  <div style="display:flex; align-items:center; gap:24px; justify-content:space-between; width:100%;">
        <div style="display:flex; align-items:center; gap:16px; font-size:1rem;">
          <span aria-hidden="true" style="font-size:1rem; font-weight:800;">∥</span>
          <span style="font-size:1rem; font-weight:600; letter-spacing:-0.01em;">Matrix Decomposition</span>
          <span style="background:#2563eb; color:#fff; border-radius:10px; padding:4px 10px; font-size:0.95rem; font-weight:500; font-family: 'Montserrat', 'Inter', 'Test Sohne', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; border:1.5px solid #e5e7eb; letter-spacing:-0.01em; box-shadow:0 1px 4px rgba(37,99,235,0.07);">Docs</span>
        </div>
        <a href="https://github.com/PragyanTiwari/Matrix-Decomposition-Implementations" target="_blank" rel="noreferrer" aria-label="View on GitHub" style="display:inline-flex; align-items:center; gap:5px; border:1px solid #222; border-radius:10px; padding:6px 14px; font-weight:600; background:#222; color:#fff; text-decoration:none; margin-left:auto; font-size:1rem;">
          <svg class="icon" aria-hidden="true" viewBox="0 0 16 16" width="16" height="16" fill="currentColor">
            <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38
              0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01
              1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95
              0-.87.31-1.59.82-2.15-.08-.2-.36-1.01.08-2.11 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0
              1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.91.08 2.11.51.56.82 1.27.82 2.15
              0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8Z"/>
          </svg>
          <span>GitHub</span>
        </a>
        </div>
      </div>
    </section>

    <section id="notebooks" class="section" aria-labelledby="notebooks-title">
      <h2 id="notebooks-title" style="font-weight:600;">Notebooks</h2>
      <p style="margin-top:6px; margin-bottom:8px; color: #374151;">Interactive notebooks in edit mode — modify and experiment with the code.</p>
      <div class="grid" id="notebooks-grid" aria-live="polite">
        {% if notebooks or apps %}
          {% for item in (notebooks + apps) %}
          <article class="card" data-type="{{ item.type | default('notebook') }}">
            <div class="card__media">
              <img src="{{ item.image_url | default('') }}" alt="Preview of {{ item.title | default(item.display_name) }}" loading="lazy" />
            </div>
            <header><h3><a href="{{ item.source_link | default(item.html_path) }}">{{ item.title | default(item.display_name) }}</a></h3></header>
            <p>{{ item.description | default('') }}</p>
            <div class="tags">
              {% for tag in item.tags | default([]) %}
              <span class="tag">{{ tag }}</span>
              {% endfor %}
            </div>
            <div class="actions" aria-label="Notebook actions">
              {% if item.app_link %}
              <a class="btn btn--primary" href="{{ item.app_link }}">
                <svg class="icon" width="16" height="16" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path d="M4 4.5v11l11-5.5-11-5.5Z"/></svg>
                <span>Open App</span>
              </a>
              {% endif %}
              {% if item.source_link or item.html_path %}
              <a class="btn btn--ghost" href="{{ item.source_link | default(item.html_path) }}">
                <svg class="icon" width="16" height="16" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path d="M2.5 13.793V17.5h3.707l8.94-8.94-3.707-3.707-8.94 8.94ZM18 5.207l-3.207-3.207-1.793 1.793 3.207 3.207L18 5.207Z"/></svg>
                <span>Source Code</span>
              </a>
              {% endif %}
            </div>
            <div class="card-meta"><span class="badge">{{ item.type | default('notebook') | title }}</span><time datetime="{{ item.date | default('') }}">{{ item.date | default('') }}</time></div>
          </article>
          {% endfor %}
        {% endif %}
      </div>
    </section>
  </main>

  <footer>
    <div class="container" style="display:flex; justify-content:space-between; gap:12px; flex-wrap:wrap; margin-top:0;">
      <div>&copy; 2025 Matrix Decomposition</div>
      <nav aria-label="Footer">
        <a href="https://github.com/PragyanTiwari" style="margin-left:12px">About the Author</a>
      </nav>
    </div>
  </footer>


</body>
</html>